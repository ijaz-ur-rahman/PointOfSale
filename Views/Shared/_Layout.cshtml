    <script>
        $("#sidebar-toggle.sidebar-toggle").click(function (e) {
            e.preventDefault();
            var sidebarWidth = $(".sidebar").width();
            if (sidebarWidth == 70) {
                localStorage.setItem("SidebarWidth", 280);
                $("body.app").addClass("is-collapsed");
            }
            else {
                localStorage.setItem("SidebarWidth", 70);
                $("body.app").removeClass("is-collapsed");
            }
        });

        $(function () {
